import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class IsolationTest2 {
	private static String url = "jdbc:postgresql://10.44.133.56:5432/pg";
	private static String userName = "test";
	private static String password = "gs_123456";
	private static String dbType = "postgres";
	private volatile boolean stop=false;

	public IsolationTest2(String svt) {
		if (svt == null) {
			System.out.println("invalid parameter");
			return;
		}

		if (svt.equalsIgnoreCase("gaussdb")) {
			url = "jdbc:opengauss://10.44.133.55:7777,10.44.133.56:7777,10.44.133.57:7777/tp2?targetServerType=master&prepareThreshold=5&batchMode=on&fetchsize=1&connectionExtraInfo=fals&loggerLevel=off";
			//url = "jdbc:opengauss://10.90.62.217:29900/postgres?targetServerType=master&prepareThreshold=5&batchMode=on&fetchsize=1&connectionExtraInfo=fals&loggerLevel=off";
			dbType = "gaussdb";
		} else if(svt.equalsIgnoreCase("pg")) {
			url = "jdbc:postgresql://10.44.133.56:5432/pg";
			dbType = "postgres";
		}else
		{
			System.out.println("invalid dbtype");
			return;
		}
		System.out.println("start testing " + dbType);

	}

	public static void main(String[] args) {
		try {
			new IsolationTest2("gaussdb").test();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public void test() throws SQLException {
		Connection conn1 = getConn(url);
		Connection conn2 = getConn(url);
		Connection conn3 = getConn(url);
		Connection conn4 = getConn(url);
		conn4.setAutoCommit(false);

		final Statement stmt1 = conn1.createStatement();
		final Statement stmt2 = conn2.createStatement();
		final Statement stmt4 = conn4.createStatement();
		check(conn3);
		for (int i = 0; i < 100000; i++) {
			long startTime=System.currentTimeMillis();
			while (!init(conn1))
				;

			try {

				stmt1.execute("set session characteristics as transaction isolation level repeatable read ;");
				int ret = stmt1.executeUpdate("delete from a where a1= 2");
				if (ret != 1)
					System.out.println("incorrect result, expect 1,actual " + ret);

				stmt2.execute("set session characteristics as transaction isolation level repeatable read ;");
				ResultSet rs = stmt2.executeQuery("select * from a;");
				while (rs.next()) {
					// System.out.println(rs.getInt(1) + "," + rs.getInt(2));
					;
				}
				rs.close();

				new Thread() {
					public void run() {
						try {
							int ret = stmt2.executeUpdate("insert into a values(2,0)");
							if (ret != 1)
								System.out.println("incorrect result, expect 1,actual " + ret);

						} catch (Exception e) {
							e.printStackTrace();
						}
					}
				}.start();

				String sql=null;
				if(dbType.equalsIgnoreCase("gaussdb"))
					sql="select a.query,w.wait_status,a.state from pg_stat_activity a ,pg_thread_wait_status w where query like 'insert into a values%' and a.query_id=w.query_id and a.pid=w.tid ";
				else
					sql="select a.query,case when wait_event_type = 'Lock' then 'acquire lock' else wait_event_type end,a.state from pg_stat_activity a  where query like 'insert into a values%' and state='active'";
				
				while (true) {
					System.out.println("wait insert");
					boolean found = false;
					
					ResultSet act = stmt4.executeQuery(sql);
					while (act.next()) {
						String event = act.getString(2);
						System.out.println("debug event=" + event);
						if (event.contains("acquire lock")) {
							found = true;
							break;
						}
					}
					if (found)
						break;
				}
				conn1.commit();

				System.out.println("-----------after insert-------------");
				int count = 0;
				ResultSet rs2 = stmt2.executeQuery("select * from a;");
				while (rs2.next()) {
					System.out.println(rs2.getInt(1) + "," + rs2.getInt(2));
					count++;
				}
				rs2.close();
				if (count != 3)
					System.err.println("bad result");

				conn2.commit();
				System.out.println("-----------finished-------------");
			} catch (Exception e) {
				e.printStackTrace();
			}
			
			long endTime=System.currentTimeMillis();
			System.err.println("elipsed time=" + (endTime - startTime));
		}
		stop=true;
		
		closeConn(conn1);
		closeConn(conn2);
		closeConn(conn3);
		closeConn(conn4);

	}

	private void check(Connection conn) {
		new Thread() {
			public void run() {
				try {
					conn.setAutoCommit(false);
					PreparedStatement s1 = conn.prepareStatement(
							"(Select /*+ tablescan(b) */ a1,'tablescan' from a b except all select  /*+no tablescan(a) */   a1,'tablescan' from a)"
									+ "union all (Select /*+no tablescan(a) */ a1,'indexscan' from a  except all select  /*+tablescan(a) */  a1,'indexscan' from a);");

					while (!stop) {
						ResultSet rs = s1.executeQuery();
						while (rs.next()) {
							System.out.println("bad result : " + rs.getInt(1));
						}
						rs.close();
					}
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		}.start();
	}

	private boolean init(Connection conn) {
		try {
			Statement stmt = conn.createStatement();
			System.out.println("#init start");
			try {
				stmt.execute("delete from a;");
			} catch (SQLException e) {
				e.printStackTrace();
				if (e.getMessage().contains("does not exist")) {
					// not exists
					try {
						conn.rollback();
						stmt.execute("drop table if exists a;");
						if(dbType.equalsIgnoreCase("gaussdb"))
							stmt.execute("create table a(a1 int , a2 int , primary key(a1)) WITH (storage_type=USTORE) ;");
						else
							stmt.execute("create table a(a1 int , a2 int , primary key(a1)) ;");
					} catch (SQLException e1) {
						e1.printStackTrace();
					}
				}
			}

			stmt.execute("insert into a values(1,1);");
			stmt.execute("insert into a values(2,2);");
			stmt.execute("insert into a values(3,3);");
			conn.commit();
			System.out.println("#init finished");
		} catch (SQLException e) {
			System.out.println(e.getMessage());
			try {
				conn.rollback();
			} catch (SQLException e2) {
				System.out.println(e2.getMessage());
			}
			return false;
		}
		return true;
	}

	public static void closeConn(Connection con) {
		try {
			con.close();
		}catch (SQLException e) {
			System.out.println("failed to close connection: " + e.getMessage());
			}
	}
	public static Connection getConn(String url) {
		try {
			if (dbType.equalsIgnoreCase("oracle"))
				Class.forName("oracle.jdbc.driver.OracleDriver");
			else if (dbType.equalsIgnoreCase("postgres"))
				Class.forName("org.postgresql.Driver");
			else if (dbType.equalsIgnoreCase("gaussdb"))
				Class.forName("com.huawei.opengauss.jdbc.Driver");
			else
				Class.forName("oracle.jdbc.driver.OracleDriver");
		} catch (ClassNotFoundException e) {
			System.out.println("error, can not find driver");
			e.printStackTrace();
			System.exit(-1);
			return null;
		}

		Connection con = null;
		try {
			con = DriverManager.getConnection(url, userName, password);
			con.setAutoCommit(false);
		} catch (SQLException e) {
			System.out.println("error, connect failed: " + url);
			e.printStackTrace();
		}

		return con;
	}
}
